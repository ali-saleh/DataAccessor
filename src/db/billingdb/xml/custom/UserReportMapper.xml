	<select id="getSalesmenList" resultMap="SimpleUserMap">
		select
		urm.user_id as
		user_id,
		cf.content as fullname
		from
		user_role_map urm,
		contact c,
		contact_field cf
		where
		urm.role_id = 9
		AND
		c.user_id = urm.user_id
		AND
		cf.contact_id = c.id
		AND
		cf.type_id = 432
	</select>

	<select id="getDistibutorList" resultMap="SimpleUserMap">
		select
		urm.user_id as user_id,
		cf.content as fullname
		from
		user_role_map urm,
		contact c,
		contact_field cf
		where
		urm.role_id = 4
		AND
		c.user_id = urm.user_id
		AND
		cf.contact_id = c.id
		AND
		cf.type_id = 432
	</select>

	<select id="getUsersByName" resultMap="SimpleUserMap" parameterType="map" >
		select
		c.user_id as user_id,
		cf.content as fullname
		from
		contact c,
		contact_field cf
		Where
		cf.contact_id = c.id
		<if test="city != 0">
			AND c.city = #{city, jdbcType=INTEGER}
		</if>
		AND
		cf.type_id = 432
		AND
		cf.content like #{name, jdbcType=VARCHAR}
	</select>



